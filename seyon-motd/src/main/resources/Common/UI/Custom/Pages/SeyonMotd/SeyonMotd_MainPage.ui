// No includes - Common.ui is not resolvable from plugin asset pack.

@TabButtonStyle = TextButtonStyle(
  Default: (Background: #2a2a2a, LabelStyle: (FontSize: 14, TextColor: #ffffff)),
  Hovered: (Background: #3a3a3a, LabelStyle: (FontSize: 14, TextColor: #ffffff)),
  Pressed: (Background: #4a4a4a, LabelStyle: (FontSize: 14, TextColor: #ffffff))
);

@ActiveTabButtonStyle = TextButtonStyle(
  Default: (Background: #4a90e2, LabelStyle: (FontSize: 14, TextColor: #ffffff)),
  Hovered: (Background: #5aa0f2, LabelStyle: (FontSize: 14, TextColor: #ffffff)),
  Pressed: (Background: #6ab0ff, LabelStyle: (FontSize: 14, TextColor: #ffffff))
);

@ActionButtonStyle = TextButtonStyle(
  Default: (Background: #4a90e2, LabelStyle: (FontSize: 14, TextColor: #ffffff)),
  Hovered: (Background: #5aa0f2, LabelStyle: (FontSize: 14, TextColor: #ffffff)),
  Pressed: (Background: #3a80d2, LabelStyle: (FontSize: 14, TextColor: #ffffff))
);

Group {
  LayoutMode: Center;
  Anchor: (Full: 0);
  Background: #000000(0.6);

  Group {
    Anchor: (Width: 900, Height: 650);
    Background: #252525;
    LayoutMode: Top;

    Group #Title {
      LayoutMode: Top;
      Padding: (Left: 20, Right: 20, Top: 15, Bottom: 10);
      Label {
        Style: (FontSize: 24, TextColor: #4a90e2, RenderBold: true);
        Text: "MOTD Configuration";
      }
    }

    Group #Content {
      LayoutMode: Left;

      Group #Sidebar {
        Anchor: (Width: 200);
        LayoutMode: Top;
        Background: #1a1a1a;
        Padding: (Left: 10, Right: 10, Top: 15, Bottom: 15);

        TextButton #MessagesTab {
          Anchor: (Height: 40, Bottom: 8);
          Padding: (Left: 12, Right: 12, Top: 10, Bottom: 10);
          Text: "Messages";
          Style: @TabButtonStyle;
        }

        TextButton #SettingsTab {
          Anchor: (Height: 40, Bottom: 8);
          Padding: (Left: 12, Right: 12, Top: 10, Bottom: 10);
          Text: "Settings";
          Style: @TabButtonStyle;
        }

        TextButton #TranslationsTab {
          Anchor: (Height: 40, Bottom: 8);
          Padding: (Left: 12, Right: 12, Top: 10, Bottom: 10);
          Text: "Translations";
          Style: @TabButtonStyle;
        }

        Label {
          FlexWeight: 1;
        }

        TextButton #TestMotdButton {
          Anchor: (Height: 40);
          Padding: (Left: 12, Right: 12, Top: 10, Bottom: 10);
          Text: "TEST MOTD";
          Style: @ActionButtonStyle;
        }
      }

      Group #MainContent {
        FlexWeight: 1;
        LayoutMode: Top;
        Background: #252525;
        Padding: (Left: 20, Right: 20, Top: 15, Bottom: 15);

        Group #MessagesTabContent {
          LayoutMode: Top;
          FlexWeight: 1;
          Visible: true;

          Group {
            LayoutMode: Left;
            Anchor: (Bottom: 10);

            Label {
              Anchor: ();
              Style: (FontSize: 20, TextColor: #4a90e2, RenderBold: true);
              Text: "MOTD Messages";
            }

            Label {
              FlexWeight: 1;
            }

            TextButton #AddMessageButton {
              Anchor: (Height: 32, Right: 10);
              Padding: (Left: 16, Right: 16, Top: 6, Bottom: 6);
              Text: "ADD";
              Style: @ActionButtonStyle;
            }

            TextButton #SaveMessagesButton {
              Anchor: (Height: 32);
              Padding: (Left: 20, Right: 20, Top: 6, Bottom: 6);
              Text: "SAVE";
              Style: @ActionButtonStyle;
            }
          }

          Group #MessagesList {
            Anchor: (Width: 660);
            FlexWeight: 1;
            LayoutMode: TopScrolling;
            Padding: (Left: 4);

            Group #MessagesCards {
              LayoutMode: Top;
            }
          }
        }

        Group #SettingsTabContent {
          LayoutMode: Top;
          FlexWeight: 1;
          Visible: false;

          Label {
            Anchor: (Bottom: 15);
            Style: (FontSize: 20, TextColor: #4a90e2, RenderBold: true);
            Text: "Display Settings";
          }

          Group {
            LayoutMode: Top;
            Anchor: (Bottom: 10);
            Background: #1a1a1a;
            Padding: (Left: 15, Right: 15, Top: 15, Bottom: 15);

            Group {
              LayoutMode: Left;
              Anchor: (Bottom: 12);

              CheckBox #ShowInChatCheckbox {
                Anchor: (Width: 24, Height: 24, Right: 8);
              }

              Label {
                Anchor: ();
                Style: (FontSize: 14, TextColor: #ffffff(0.9));
                Text: "Show in Chat";
              }
            }

            Group {
              LayoutMode: Left;
              Anchor: (Bottom: 12);

              CheckBox #ShowAsNotificationCheckbox {
                Anchor: (Width: 24, Height: 24, Right: 8);
              }

              Label {
                Anchor: ();
                Style: (FontSize: 14, TextColor: #ffffff(0.9));
                Text: "Show as Notification";
              }
            }

            Group {
              LayoutMode: Top;
              Anchor: (Bottom: 0);

              Label {
                Anchor: (Bottom: 6);
                Style: (FontSize: 14, TextColor: #ffffff(0.9));
                Text: "Show Plugin List after MOTD (seconds, -1 = disabled):";
              }

              Group {
                LayoutMode: Left;
                Anchor: ();

                TextField #PluginListDelayField {
                  Anchor: (Width: 100, Height: 30, Right: 8);
                }

                Label {
                  Anchor: ();
                  Style: (FontSize: 12, TextColor: #888888);
                  Text: "(Default: -1 = disabled, Max: 60s)";
                }
              }
            }
          }

          Label {
            FlexWeight: 1;
          }

          Group {
            LayoutMode: Left;
            Anchor: (Top: 10);

            Label {
              FlexWeight: 1;
            }

            TextButton #SaveSettingsButton {
              Anchor: (Height: 36);
              Padding: (Left: 24, Right: 24, Top: 8, Bottom: 8);
              Text: "SAVE SETTINGS";
              Style: @ActionButtonStyle;
            }
          }
        }

        Group #TranslationsTabContent {
          LayoutMode: Top;
          FlexWeight: 1;
          Visible: false;

          Group {
            LayoutMode: Left;
            Anchor: (Bottom: 10);

            Label {
              Anchor: ();
              Style: (FontSize: 20, TextColor: #4a90e2, RenderBold: true);
              Text: "Translations";
            }

            Label {
              FlexWeight: 1;
            }

            TextButton #SaveTranslationsButton {
              Anchor: (Height: 32);
              Padding: (Left: 20, Right: 20, Top: 6, Bottom: 6);
              Text: "SAVE";
              Style: @ActionButtonStyle;
            }
          }

          Label {
            Anchor: (Bottom: 5);
            Style: (FontSize: 12, TextColor: #888888);
            Text: "Customize chat and notification texts";
          }

          Group #TranslationsList {
            Anchor: (Width: 660);
            FlexWeight: 1;
            LayoutMode: TopScrolling;
            Padding: (Left: 4);

            Group #TranslationsCards {
              LayoutMode: Top;
            }
          }
        }
      }
    }
  }

  TextButton #BackButton {
    Anchor: (Top: 10, Right: 10);
    Padding: (Left: 10, Right: 10, Top: 6, Bottom: 6);
    Text: "X";
    Style: TextButtonStyle(
      Default: (Background: #3a3a3a, LabelStyle: (FontSize: 14, TextColor: #ffffff)),
      Hovered: (Background: #4a4a4a, LabelStyle: (FontSize: 14, TextColor: #ffffff)),
      Pressed: (Background: #2a2a2a, LabelStyle: (FontSize: 14, TextColor: #ffffff))
    );
  }
}
